# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# Implicit targets
SHELL := /bin/bash

APPS=beeswax impala pig hbase sqoop search security rdbms spark useradmin zookeeper

$(APPS:%=debian/hue-%.postinst): debian/hue-app.postinst.tpl
	sed -e 's#@APP@#$(patsubst debian/hue-%.postinst,%,$@)#'  < $< > $@

$(APPS:%=debian/hue-%.prerm): debian/hue-app.prerm.tpl
	sed -e 's#@APP@#$(patsubst debian/hue-%.prerm,%,$@)#'  < $< > $@

crh_dir=/usr/${CRH_TAG}/${CRH_VERSION_WITH_BN}

%:
	dh $@

override_dh_auto_build:
	env FULL_VERSION=${HUE_BASE_VERSION} bash -x debian/do-component-build -Dmaven.repo.local=${HOME}/.m2/repository

override_dh_auto_install: build $(APPS:%=debian/hue-%.postinst) $(APPS:%=debian/hue-%.prerm)
	env CRH_DIR=${crh_dir} bash -x debian/install_hue.sh --build-dir=${PWD} --prefix=${PWD}/debian/tmp
	sed -e 's,^,build:,;' debian/tmp/${crh_dir}/hue/Makefile.buildvars \
	  | tr _ - >> debian/hue-common.substvars
	sed -i -e "s,{CRH_DIR},${crh_dir}," debian/hue-app.postinst.tpl
	sed -i -e "s,{CRH_DIR},${crh_dir}," debian/hue-app.prerm.tpl
	sed -i -e "s,{CRH_DIR},${crh_dir}," debian/hue-common.postrm
	sed -i -e "s,{CRH_DIR},${crh_dir}," debian/hue-common.preinst
	sed -i -e "s,{CRH_DIR},${crh_dir}," debian/hue-common.prerm
	
override_dh_installinit:
	dh_installinit --name=hue

override_dh_auto_test:
	@echo Tests are disabled
	
	# Rename file to add CRH version as name, first define file list
deb_file=common server doc beeswax impala pig hbase sqoop search rdbms security spark useradmin zookeeper
override_dh_install:
	# Rename file to add CRH version as name, second traverse deb_file list and rename everyone
	# dirs
	[ ! -f debian/hue.dirs ] || mv debian/hue.dirs debian/hue${CRH_VERSION_AS_NAME}.dirs
	# install
	[ ! -f debian/hue.install ] || mv debian/hue.install debian/hue${CRH_VERSION_AS_NAME}.install
	# lintian-overrides
	[ ! -f debian/hue.lintian-overrides ] || mv debian/hue.lintian-overrides debian/hue${CRH_VERSION_AS_NAME}.lintian-overrides
	# manpages
	[ ! -f debian/hue.manpages ] || mv debian/hue.manpages debian/hue${CRH_VERSION_AS_NAME}.manpages
	# postinst
	[ ! -f debian/hue.postinst ] || mv debian/hue.postinst debian/hue${CRH_VERSION_AS_NAME}.postinst
	# preinst
	[ ! -f debian/hue.preinst ] || mv debian/hue.preinst debian/hue${CRH_VERSION_AS_NAME}.preinst
	# prerm
	[ ! -f debian/hue.prerm ] || mv debian/hue.prerm debian/hue${CRH_VERSION_AS_NAME}.prerm
	# other files like above
	for file in $(deb_file); \
	do \
		[ ! -f debian/hue-$$file.dirs ] || mv debian/hue-$$file.dirs debian/hue${CRH_VERSION_AS_NAME}-$$file.dirs; \
		[ ! -f debian/hue-$$file.install ] || mv debian/hue-$$file.install debian/hue${CRH_VERSION_AS_NAME}-$$file.install; \
		[ ! -f debian/hue-$$file.lintian-overrides ] || mv debian/hue-$$file.lintian-overrides debian/hue${CRH_VERSION_AS_NAME}-$$file.lintian-overrides; \
		[ ! -f debian/hue-$$file.manpages ] || mv debian/hue-$$file.manpages debian/hue${CRH_VERSION_AS_NAME}-$$file.manpages; \
		[ ! -f debian/hue-$$file.postinst ] || mv debian/hue-$$file.postinst debian/hue${CRH_VERSION_AS_NAME}-$$file.postinst; \
		[ ! -f debian/hue-$$file.preinst ] || mv debian/hue-$$file.preinst debian/hue${CRH_VERSION_AS_NAME}-$$file.preinst; \
		[ ! -f debian/hue-$$file.prerm ] || mv debian/hue-$$file.prerm debian/hue${CRH_VERSION_AS_NAME}-$$file.prerm; \
	done
	
	dh_install