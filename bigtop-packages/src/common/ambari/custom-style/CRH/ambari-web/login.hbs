{{#unless isServerClientVersionMismatch}}
<!-- crh -->
  <style type="text/css">
    *{ margin:0; padding:0; }
    .clearfix:after {
        content:"\200B";
        display:block;
        height:0;
        clear:both;
    }
    .clearfix {*zoom:1;}/*IE/7/6*/
    html{ height:100%;}
    body{ height:100%;background:#000 url(img/bg.jpg) no-repeat;background-attachment:fixed;background-size: cover;background-position: bottom right;}
    .crh_content{ margin-left: auto; margin-right:auto; width:980px; height:260px; padding-top:10%; }
    .crh_content h1{ height:100px; background: url(img/textBg.png) no-repeat;}
    .login_form { width: 445px; }
    form{ display:block; }
    form dl{ margin-left:0; margin-bottom:10px; float:left; width:210px; margin-right:10px; }
    form dl.loginBtn1{ float:right; text-align:right; padding-right:5px;}
    form dt{ width:100%; height:30px; line-height:30px; font-size:14px; color:#198311; text-align:left;}
    form dd{ height:35px; width:210px;}
    .error{ color:#cc0000;}
    .inputStyle{width: 198px;height:23px; line-height: 23px;    border: 1px solid #FFF;background: 0; color: #999;font-family: Verdana,Tahoma,Arial;font-size: 16px; padding: 5px;border-radius: 3px;}
    .test_btn {width: 98px;height: 35px; border:0 none;color: #020c56; background: none; line-height: 35px;outline: none; font-weight: normal;  font-size: 18px; cursor: pointer;border-radius: 3px; text-align: center; background: url(img/btn.png) no-repeat}
   </style>    
<!-- crh --> 
<div class="crh_content">
  <h1></h1>
  <div class="login_form clearfix">
    <form class="clearfix">
      <dl>
        <dt>账号</dt>
        <dd style="margin-left:0px;">{{view view.loginTextField valueBinding="loginName" disabledBinding="isSubmitDisabled"}}</dd>
      </dl>
      <dl>
        <dt >密码</dt>
        <dd style="margin-left:0px;">{{view view.passTextField type="password" valueBinding="password" disabledBinding="isSubmitDisabled"}}</dd>
      </dl>
      <dl class = "loginBtn1">
        <dd><button class="test_btn" {{bindAttr disabled="isSubmitDisabled"}} {{action "submit" target="controller"}}></button>
      </dl>
    </form>
    <div class="error" >
      {{#if errorMessage}}
        <div class="alert alert-error">
          {{errorMessage}}
        </div>
      {{/if}}
    </div>    
  </div>
</div>
{{/unless}}
