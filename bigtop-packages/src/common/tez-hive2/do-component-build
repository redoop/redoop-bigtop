set -xe

. `dirname $0`/bigtop.bom

sed -i '/--remove-unnecessary-resolutions=false/a\\t\t<argument>--allow-root</argument>' tez-ui/pom.xml

BUILD_TEZ_OPTS="clean package \
-Dtar -Dhadoop.version=${HADOOP_VERSION} \
-Phadoop26 \
-DskipTests \
-Dmaven.javadoc.skip=true"

mvn ${BUILD_TEZ_OPTS} "$@"

rm -rf build
mkdir build
mv tez-dist/target/tez-${tez_hive2_base_version}.tar.gz build/
tar -C build --strip-components=0 -xzf tez-dist/target/tez-${tez_hive2_base_version}-minimal.tar.gz
